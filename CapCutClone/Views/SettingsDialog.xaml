<ContentDialog
    x:Class="CapCutClone.Views.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Settings"
    CornerRadius="10"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="Save"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    SecondaryButtonText="Cancel"
    mc:Ignorable="d">

    <NavigationView
        IsBackButtonVisible="Collapsed"
        IsSettingsVisible="False"
        PaneDisplayMode="Top">
        <NavigationView.MenuItems>
            <NavigationViewItem x:Uid="Settings_Project" />
            <NavigationViewItem x:Uid="Settings_Edit" />
            <NavigationViewItem x:Uid="Settings_Perfomance" />
            <NavigationViewItem x:Uid="Settings_Language" />
        </NavigationView.MenuItems>
        <Frame
            x:Name="ContentFrame"
            Width="300"
            Height="400" />
    </NavigationView>
</ContentDialog>
