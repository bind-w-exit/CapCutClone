<ContentDialog
    x:Class="CapCutClone.Views.ShortcutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CapCutClone.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CapCutClone.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TITLE"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="Button1"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    SecondaryButtonText="Button2"
    mc:Ignorable="d">

    <Grid>
        <controls:HotKeyTextBox
            Grid.Column="1"
            Width="120"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            HotKey="{Binding ToggleHotKey}"
            Style="{ThemeResource TextBoxStyle}"
            TextAlignment="Center" />
    </Grid>
</ContentDialog>
